{
  "name": "wp-lead-hunter",
  "version": "1.0.0",
  "description": "End-to-end web application for discovering qualified WordPress blogs based on traffic and domain age, enriching them as marketing leads, sending AI-generated outreach emails via OpenAI, and synchronizing lead status and activity with Notion. Designed for scalable lead generation, compliance-aware outreach, and operational traceability.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "cli": "node cli.js",
    "test": "echo \"Tests not yet implemented\" && exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "openai": "^6.15.0",
    "uuid": "^13.0.0",
    "whois-json": "^2.0.4",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
