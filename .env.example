# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wp-lead-hunter

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# OpenAI Configuration (can be set per-user in settings)
OPENAI_API_KEY=your_openai_api_key_here

# Notion Configuration (can be set per-user in settings)
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Google API Configuration (for domain age checking)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# Email Configuration (optional - for future SMTP integration)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_password

# Application Configuration
LOG_LEVEL=info
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Lead Discovery Configuration
MIN_DOMAIN_AGE_MONTHS=6
MIN_TRAFFIC_THRESHOLD=1000
